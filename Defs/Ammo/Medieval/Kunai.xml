<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_Kunai</defName>
		<label>kunai</label>
		<ammoTypes>
			<Pila>Kunai_Thrown</Pila>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->
	
	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseProjectileNeolithic" Name="BaseKunaiProjectile" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Kunai</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Stab</damageDef>
		</projectile>
	</ThingDef>
	
	<!-- The amount of arrows usable over the ammo lifetime for each resource cost is equal to
	[r / (1 - x)];
		x = preExplosionSpawnChance,
		r = resource cost. -->
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseKunaiProjectile">
		<defName>Kunai_Thrown</defName>
		<label>kunai</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>14</damageAmountBase>
			<speed>60</speed>
			<armorPenetrationBase>0.2</armorPenetrationBase>
			<preExplosionSpawnChance>0.6</preExplosionSpawnChance>	<!-- 4 javelins per resource -->
			<preExplosionSpawnThingDef>RangedWeapon_Kunai</preExplosionSpawnThingDef>
		</projectile>
	</ThingDef>
	
</Defs>
